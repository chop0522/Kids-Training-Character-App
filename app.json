{
  "expo": {
    "name": "がんばりアルバム",
    "slug": "kids-training-character-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.yuya.kidstraining",
      "buildNumber": "1",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "写真や動画を撮影するためにカメラを使用します。",
        "NSPhotoLibraryUsageDescription": "写真や動画を追加するためにフォトライブラリを使用します。",
        "NSMicrophoneUsageDescription": "動画撮影時の音声録音のためにマイクを使用します。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "publicWebBaseUrl": "https://YOUR_GITHUB_NAME.github.io/YOUR_REPO_NAME"
    },
    "plugins": [
      "expo-web-browser"
    ]
  }
}
